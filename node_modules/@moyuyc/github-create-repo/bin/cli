#!/usr/bin/env node
'use strict';

// MODULES //

var fs = require( 'fs' );
var path = require( 'path' );
var parseArgs = require( 'minimist' );
var notifier = require( 'update-notifier' );
var pkg = require( './../package.json' );
var opts = require( './opts.json' );
var create = require( './../lib' );


// VARIABLES //

var token;
var args;


// FUNCTIONS //

/**
* FUNCTION: onClose()
*	Callback invoked upon writing a file to `stdout`.
*
* @private
*/
function onClose() {
	process.exit( 0 );
}


// INIT //

process.stdout.on( 'error', process.exit );


// PACKAGE UPDATES //

notifier( { 'pkg': pkg } ).notify();


// ARGUMENTS //

args = parseArgs( process.argv.slice( 2 ), opts );


// HELP //

if ( args.help ) {
	fs.createReadStream( path.join( __dirname, 'usage.txt' ) )
		.pipe( process.stdout )
		.on( 'close', onClose );
    return;
}


// VERSION //

if ( args.version ) {
	console.log( pkg.version );
	return;
}


// OPTIONS //

opts = {};

if ( args.token ) {
	token = args.token;
}
else if ( process.env.GITHUB_TOKEN ) {
	token = process.env.GITHUB_TOKEN;
}
if ( token ) {
	opts.token = token;
}
if ( args.useragent ) {
	opts.useragent = args.useragent;
}
if ( args.org ) {
	opts.org = args.org;
}
if ( args.desc ) {
	opts.desc = args.desc;
}
if ( args.homepage ) {
	opts.homepage = args.homepage;
}
if ( args.team ) {
	opts.team = parseInt( args.team, 10 );
}
if ( args.gitignore ) {
	opts.gitignore = args.gitignore;
}
if ( args.license ) {
	opts.license = args.license;
}
if ( args.private ) {
	opts.private = true;
}
if ( args.license === false ) {
	opts.license = false;
}
if ( args.issues === false ) {
	opts.issues = args.issues;
}
if ( args.wiki === false ) {
	opts.wiki = args.wiki;
}
if ( args.downloads === false ) {
	opts.downloads = args.downloads;
}
if ( args.infer === false ) {
  opts.inferFromPackageJson = args.infer;
}
if ( args.init ) {
	opts.init = args.init;
}


// CREATE REPO //

create( args._[0], opts, clbk );

/**
* FUNCTION: clbk( error, repo, info )
*	Callback invoked upon creating a repository.
*
* @private
* @param {Error|Null} error - error object
* @param {Object} repo - repository information
* @param {Object} info - rate limit info
* @returns {Void}
*/
function clbk( error, repo, info ) {
	if ( info ) {
		process.stderr.write( JSON.stringify( info )+'\n', 'utf8' );
	}
	if ( error ) {
		process.stderr.write( error.message+'\n', 'utf8' );
		return process.exit( 1 );
	}
	process.stdout.write( JSON.stringify( repo )+'\n', 'utf8' );
	process.exit( 0 );
}
